<div class="col-sm-4">
    <h3>Register</h3>
    <form ng-controller="RegisterCtrl" novalidate name="registerform">
        <div class="validation-summary-errors" ng-show="errorData.isError">
            <span class="glyphicon glyphicon-warning-sign">{{errorData.errorMessage}}</span>
        </div>
        <div class="form-group">
            <label>
                First Name
            </label>
            <input class="form-control" required name="firstName" ng-model="RegisterData.FirstName" />
            <p ng-show="registerform.firstName.$invalid && !registerform.firstName.$pristine" class="help-block">Please enter First name...</p>
        </div>
        <div class="form-group">
            <label>Last Name</label>
            <input class="form-control" required name="lastName" ng-model="RegisterData.LastName" />
            <p ng-show="registerform.lastName.$invalid && !registerform.lastName.$pristine" class="help-block">Please enter Last name...</p>
        </div>
        <div class="form-group">
            <label>Date of birth</label>
            
                <p class="input-group">
                    <input type="text" class="form-control" datepicker-popup="{{applicationDate.format}}" ng-model="applicationDate.dt" is-open="opened" min-date="applicationDate.minDate" max-date="applicationDate.maxDate" datepicker-options="applicationDate.dateOptions" ng-required="true" close-text="Close" />
                    <span class="input-group-btn">
                        <button type="button" class="btn btn-default" ng-click="open($event)"><i class="glyphicon glyphicon-calendar"></i></button>
                    </span>
                </p>
            
        </div>
        <div class="form-group">
            <label>Email</label>
            <input class="form-control" type="email" name="email" required ng-model="RegisterData.email" />
            <p ng-show="registerform.email.$invalid && !registerform.email.$pristine" class="help-block">Please enter email...</p>
        </div>
        <div class="form-group">
            <label>Password</label>
            <input class="form-control" type="password" name="password" required ng-model="RegisterData.password" />
            <p ng-show="registerform.password.$invalid && !registerform.password.$pristine" class="help-block">Please enter password...</p>
        </div>
        <div class="form-group">
            <label>Confirm Password</label>
            <input class="form-control" type="password" name="confirmPassword" required ng-required="true" ng-model="RegisterData.confirmPassword" />
            <p ng-show="registerform.confirmPassword.$invalid && !registerform.confirmPassword.$pristine" class="help-block">Please enter confirm password...</p>
        </div>
        <div class="form-group">
            <button type="button" class="btn btn-default" ng-disabled="registerform.$invalid || isBusyRegistering==true" ng-click="register()"><img src="~/Content/Images/loading.gif" ng-show="isBusyRegistering==true" />Register</button>
        </div>
    </form>
</div>


