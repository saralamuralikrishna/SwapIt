<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/angular")
</head>
<body ng-app="swapItApp">
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div><h3 class="text-muted"><span class="glyphicon glyphicon-home"></span>&nbsp;Swap-IT!</h3></div>
            </div>
            <div class="navbar-collapse collapse text-center" ng-controller="NavbarCtrl">
                <ul class="nav nav-pills pull-right">
                    <li>
                        <a ui-sref="Login" ng-show="isLoggedIn==false">Login</a>
                    </li>
                    <li>
                        <a ui-sref="Register" ng-show="isLoggedIn==false">Register</a>
                    </li>
                    <li ng-show="isLoggedIn">
                        <a ui-sref="Sell">Sell</a>
                    </li>
                    <li ng-show="isLoggedIn">
                        <a ui-sref="About">Donate</a>
                    </li>
                    <li ng-show="isLoggedIn">
                        <a ui-sref="Search">Search</a>
                    </li>
                    <li>
                        <a ui-sref="About">About</a>
                    </li>
                    <li>
                        <a ui-sref="contact">Contact</a>
                    </li>

                </ul>
                @*<form class="navbar-form navbar-right" role="form" ng-show="{{loggedIn==false}}">
                <div class="form-group">
                    <input type="text" placeholder="Email" class="form-control" ng-model="loginData.userName">
                </div>
                <div class="form-group">
                    <input type="password" placeholder="Password" class="form-control" ng-model="loginData.password">
                </div>
                <button class="btn btn-success" ng-click=""><span id="loadingImgSpan"><img ng-src=""/> </span> Sign in</button>
                <button class="btn btn-success" ng-click="">Register</button>
            </form>*@
            </div>
            <!--/.navbar-collapse -->
        </div>
    </div>
    <div class="container body-content">
        <div ui-view>
            @RenderBody()
        </div>
        <footer class="navbar navbar-fixed-bottom text-center">©&nbsp;@DateTime.Now.Year - SWAP-IT!</footer> 
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
