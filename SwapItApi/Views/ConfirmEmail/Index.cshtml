<div class="col-sm-4">
    <h3>Confirm Email</h3>
    <form ng-controller="ConfirmEmailCtrl" novalidate name="confirmEmailForm">
        <div class="validation-summary-errors" ng-show="errorData.isError">
            <span class="glyphicon glyphicon-exclamation-sign">{{errorData.errorMessage}}</span>
        </div>
        <div class="form-group">
            <label>Email</label>
            <input class="form-control" type="email" name="email" required ng-model="ConfirmEmail.userEmail" />
            <p ng-show="confirmEmailForm.email.$invalid && !confirmEmailForm.email.$pristine" class="help-block">Please enter email...</p>
        </div>
        <div class="form-group">
            <label>Password</label>
            <input class="form-control" type="password" name="password" required ng-model="ConfirmEmail.password" />
            <p ng-show="confirmEmailForm.password.$invalid && !confirmEmailForm.password.$pristine" class="help-block">Please enter password...</p>
        </div>
        <div class="form-group">
            <button type="button" class="btn btn-default" ng-disabled="confirmEmailForm.$invalid || isBusyConfirming==true" ng-click="confirm()">
                <img src="~/Content/Images/loading.gif" ng-show="isBusyConfirming==true" />Confirm
            </button>
        </div>
    </form>
</div>
